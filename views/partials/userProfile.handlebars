<div class="user-profile">
    <div class="d-flex align-items-center">
        <!-- Placeholder for User Image -->
        <div class="user-image-placeholder mr-3">
            
            <!-- <i class="fa fa-user" aria-hidden="true"></i> --> <!-- Example if using Font Awesome -->
        </div>

        <!-- User Info -->
        <div class="user-info">
            <div>{{user.firstName}} {{user.lastName}}</div>
            <div>Following: {{user.following}} | Followers: {{user.followers}}</div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-3">
        <button class="btn btn-primary btn-sm mr-2">Edit User Info</button>
        <button class="btn btn-secondary btn-sm">Log Off</button>
    </div>
</div>


