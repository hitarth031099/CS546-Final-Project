<main>
    <form id ="login-form" action="/login" method="post">
    
        <label for="contactEmailInput">Email Address</label>
        <input type="email" id="contactEmailInput" name="contactEmailInput" placeholder="Enter email-Id" required>

        {{#if contactEmailErr}}
            <div id="contactEmailError" class="errorMessage">
                {{contactEmailErr}}
            </div>
        {{/if}}

        <label for="passwordInput">Password</label>
        <input type="password" id="passwordInput" name="passwordInput" placeholder="Enter password">

        {{#if passwordErr}}
            <div id="passwordError" class="errorMessage">
                {{passwordErr}}
            </div>
        {{/if}}
        
        {{#if loginError}}
            <div id="bothError" class="errorMessage">
                {{loginError}}
            </div>
        {{/if}}

        <button type="submit">Login</button>


    </form>

   
</main>
